<h2  style="color: #B00100; margin: 0 auto">show item</h2> <br/>

<h4><%= @item.name %></h4>

<ul>
  <li>Price: <%= @item.price %> $ </li>
  <li>Weight: <%= @item.weight %></li>
  <li>Description: <%= urls_to_content (@item.description) %></li>
  <li>Link: <%= urls_to_content('https://wallup.net/wp-content/uploads/2016/01/41384-nature-sea-sky-sunset-boat.jpg') %></li>
</ul>
<br>
<%= button_to "EDIT #{@item.name}", edit_item_path, method: :get %>
<br>
<%= button_to "BACK", items_path, method: :get %>
<br>
<%= button_to "delete #{@item.name}", item_path(@item), method: :delete, style: "color: red" %>

